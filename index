const cors = require('cors');
const express = require('express');
const sequelize = require('./utilities/database.connection');

const paisRoutes = require('./routes/pais.routes');
const departamentoRoutes = require('./routes/departamento.routes');

const app = express();
app.use(cors());
app.use(express.json());
app.use(express.urlencoded({extended: true}));

app.use('/v1/api', paisRoutes);
app.use('/v1/api', departamentoRoutes);


app.listen(3000, ()=>{
    sequelize.authenticate().then(()=>{
        console.log('Servicio levantado');
    }).catch(error => {
        console.log('Se ha producido un error', error.message);
    })
})